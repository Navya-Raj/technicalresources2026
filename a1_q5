#include <iostream>
using namespace std;

int countdigit()
{
    int n, count = 0;
    cout << "enter number : ";
    cin >> n;

    while ( n > 0) {
        n = n/10;
        count++;
    }

    return count;
}
 
int main()
{
    int n;
    cout << "number of digits : " << countdigit();
    return 0;
}
